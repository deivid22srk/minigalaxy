<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- General Settings -->
    <PreferenceCategory
        android:title="@string/general_settings"
        app:iconSpaceReserved="false">

        <ListPreference
            android:key="pref_language"
            android:title="@string/language"
            android:summary="@string/language_summary"
            android:entries="@array/language_entries"
            android:entryValues="@array/language_values"
            android:defaultValue="en"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:key="pref_view_type"
            android:title="@string/view_type"
            android:summary="@string/view_type_summary"
            android:entries="@array/view_type_entries"
            android:entryValues="@array/view_type_values"
            android:defaultValue="grid"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <!-- Storage Settings -->
    <PreferenceCategory
        android:title="@string/storage_settings"
        app:iconSpaceReserved="false">

        <EditTextPreference
            android:key="pref_install_dir"
            android:title="@string/install_directory"
            android:summary="@string/install_directory_summary"
            android:inputType="textUri"
            android:selectAllOnFocus="true"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:key="pref_keep_installers"
            android:title="@string/keep_installers"
            android:summary="@string/keep_installers_summary"
            android:defaultValue="false"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <!-- Download Settings -->
    <PreferenceCategory
        android:title="@string/download_settings"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:key="pref_auto_download_updates"
            android:title="@string/auto_download_updates"
            android:summary="@string/auto_download_updates_summary"
            android:defaultValue="false"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:key="pref_concurrent_downloads"
            android:title="@string/concurrent_downloads"
            android:summary="@string/concurrent_downloads_summary"
            android:entries="@array/concurrent_downloads_entries"
            android:entryValues="@array/concurrent_downloads_values"
            android:defaultValue="2"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            android:key="pref_download_speed_limit"
            android:title="@string/download_speed_limit"
            android:summary="@string/download_speed_limit_summary"
            android:inputType="number"
            android:selectAllOnFocus="true"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <!-- Notification Settings -->
    <PreferenceCategory
        android:title="@string/notification_settings"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:key="pref_download_notifications"
            android:title="@string/download_notifications"
            android:summary="@string/download_notifications_summary"
            android:defaultValue="true"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:key="pref_update_notifications"
            android:title="@string/update_notifications"
            android:summary="@string/update_notifications_summary"
            android:defaultValue="true"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <!-- Advanced Settings -->
    <PreferenceCategory
        android:title="@string/advanced_settings"
        app:iconSpaceReserved="false">

        <Preference
            android:key="pref_clear_cache"
            android:title="@string/clear_cache"
            android:summary="@string/clear_cache_summary"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="pref_reset_settings"
            android:title="@string/reset_settings"
            android:summary="@string/reset_settings_summary"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <!-- About -->
    <PreferenceCategory
        android:title="@string/about_category"
        app:iconSpaceReserved="false">

        <Preference
            android:key="pref_about"
            android:title="@string/about"
            android:summary="@string/about_summary"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>