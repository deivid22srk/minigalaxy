<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences -->
        <include domain="sharedpref" path="." />
        <!-- Exclude large game files -->
        <exclude domain="external" path="." />
    </cloud-backup>
    <device-transfer>
        <!-- Include user preferences -->
        <include domain="sharedpref" path="." />
        <!-- Exclude large game files -->
        <exclude domain="external" path="." />
    </device-transfer>
</data-extraction-rules>