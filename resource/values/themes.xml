<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Minigalaxy" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/gog_purple</item>
        <item name="colorPrimaryDark">@color/gog_purple_dark</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>
    
    <!-- Theme without action bar -->
    <style name="Theme.Minigalaxy.NoActionBar" parent="Theme.Minigalaxy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Splash theme -->
    <style name="Theme.Minigalaxy.Splash" parent="Theme.Minigalaxy.NoActionBar">
        <item name="android:windowBackground">@color/gog_purple</item>
    </style>
    
    <!-- Popup Overlay -->
    <style name="Theme.MiniGalaxy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Button styles -->
    <style name="PrimaryButton">
        <item name="android:background">@color/gog_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="SecondaryButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/gog_purple</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="GameTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="GameSubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <!-- Game card style -->
    <style name="GameCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>