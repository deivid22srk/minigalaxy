<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using basic AppCompat -->
    <style name="Theme.Minigalaxy" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gog_purple</item>
        <item name="colorPrimaryDark">@color/gog_purple_dark</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>
    
    <!-- Theme without action bar -->
    <style name="Theme.Minigalaxy.NoActionBar" parent="Theme.Minigalaxy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Dark theme variant -->
    <style name="Theme.Minigalaxy.Dark" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/gog_purple</item>
        <item name="colorPrimaryDark">@color/gog_purple_dark</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
    
    <!-- Simple styles for UI components -->
    <style name="SimpleButton">
        <item name="android:background">@color/gog_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <style name="GameTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="GameSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>